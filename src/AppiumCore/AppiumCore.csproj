    <Copyright>Copyright © VikashChauhan51, 2023</Copyright>
    <RepositoryUrl>https://github.com/VikashChauhan51/AppiumCore</RepositoryUrl>
    <PackageTags>appium;Appium;wrapper;cross-platform;cross;platfrom;mobile;application;testing;dotnet-core;app;app-testing;appium-cross-platfrom;appium-testing</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyOriginatorKeyFile>..\AppiumCore.snk</AssemblyOriginatorKeyFile>
    <RepositoryType>git</RepositoryType>
    <ProjectGuid>{95EA45A0-6E01-46E4-A653-D1A5E0C55A99}</ProjectGuid>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
